<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/card_text_area_padding"
    android:paddingRight="@dimen/card_text_area_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/achievement_icon"
        android:src="@drawable/ic_game"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="@dimen/card_achievement_icon_margin"/>

    <TextView
        android:id="@+id/title"
        android:textSize="@dimen/typo_title"
        android:textColor="@color/colorBlack87"
        android:layout_toRightOf="@id/achievement_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/description"
        android:textSize="@dimen/typo_subheading"
        android:textColor="@color/colorBlack54"
        android:layout_toRightOf="@id/achievement_icon"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/point"
        android:textSize="@dimen/typo_body"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@id/achievement_icon"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>